    <SwitchPreferenceScreen android:title="@string/motion2013_browse_image_title" android:key="pan_to_browse_image" android:summary="@string/pan_to_browse_image_summary" android:fragment="com.android.settings_ex.motion2013.SMotionGuideHub">
