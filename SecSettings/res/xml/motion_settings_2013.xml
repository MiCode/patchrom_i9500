    <SwitchPreferenceScreen android:title="@string/tilt_to_scroll_list_title" android:key="tilt_to_scroll_list" android:summary="@string/tilt_to_scroll_list_summary" android:fragment="com.android.settings_ex.motion2013.SMotionGuideHub">
