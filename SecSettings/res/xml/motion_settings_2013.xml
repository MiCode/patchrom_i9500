<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/motion_settings_title" android:key="parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/motion2013_pick_up_title" android:key="pick_up_category" />
    <SwitchPreferenceScreen android:title="@string/pick_up_to_call_out_title" android:key="pick_up_to_call_out" android:summary="@string/pick_up_to_call_out_summary" android:fragment="com.android.settings_ex.motion2013.SMotionGuideHub">
        <extra android:name="type" android:value="pick_up_to_call_out" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/pick_up_title" android:key="pick_up" android:summary="@string/pick_up_summary" android:fragment="com.android.settings_ex.motion2013.SMotionGuideHub">
        <extra android:name="type" android:value="pick_up" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/double_tap_title" android:key="double_tap" android:summary="@string/double_tap_summary" android:fragment="com.android.settings_ex.motion2013.SMotionGuideHub">
