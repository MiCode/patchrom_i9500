<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:touchwiz="http://schemas.android.com/apk/res/touchwiz">
    <PreferenceCategory android:persistent="false" android:title="@string/sim_lock_settings_title" android:key="sim_lock">
        <Preference android:persistent="false" android:title="@string/sim_lock_settings_category">
            <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.IccLockSettings" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/network_security" android:key="network_security">
        <CheckBoxPreference android:persistent="false" android:title="@string/firewall" android:key="ip_firewall" android:summary="@string/use_ip_firewall_for_application" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/security_passwords_title">
        <CheckBoxPreference android:persistent="false" android:title="@string/show_password" android:key="show_password" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/device_admin_title" android:key="device_admin_category">
        <Preference android:persistent="false" android:title="@string/manage_device_admin" android:summary="@string/manage_device_admin_summary" android:fragment="com.android.settings_ex.DeviceAdminSettings" />
        <CheckBoxPreference android:persistent="false" android:title="@string/install_applications" android:key="toggle_install_applications" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" android:summaryOn="@string/install_unknown_applications" android:summaryOff="@string/install_unknown_applications" />
        <CheckBoxPreference android:persistent="false" android:title="@string/verify_applications" android:key="toggle_verify_applications" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" android:summaryOn="@string/verify_applications_summary" android:summaryOff="@string/verify_applications_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/credentials_title" android:key="credentials_management">
        <Preference android:persistent="false" android:title="@string/trusted_credentials" android:summary="@string/trusted_credentials_summary" android:fragment="com.android.settings_ex.TrustedCredentialsSettings" />
        <Preference android:persistent="false" android:title="@string/credentials_install" android:key="credentials_install_key" android:summary="@string/credentials_install_summary">
            <intent android:targetPackage="com.android.certinstaller" android:action="android.credentials.INSTALL" android:targetClass="com.android.certinstaller.CertInstallerMain" />
        </Preference>
        <Preference android:persistent="false" android:title="@string/credentials_reset" android:key="reset_credentials" android:summary="@string/credentials_reset_summary">
            <intent android:targetPackage="com.android.settings_ex" android:action="com.android.credentials.RESET" android:targetClass="com.android.settings_ex.CredentialStorage" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/smartcard_credential" android:key="smartcard_credential_category">
        <Preference android:persistent="false" android:title="@string/smartcard_configuration" android:key="smartCardConfig" android:summary="@string/smartcard_configuration_summary" android:fragment="com.android.settings_ex.SmartcardCredentialSettings" />
    </PreferenceCategory>
</PreferenceScreen>