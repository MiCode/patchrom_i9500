<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/panel_view" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/panel" android:background="@drawable/setting_panel_bg" android:layout_width="@dimen/notification_panel_width" android:layout_height="@dimen/notification_panel_height">
        <ImageView android:layout_gravity="top|center" android:id="@id/panel_icon" android:layout_width="@dimen/notification_image_width" android:layout_height="@dimen/notification_image_height" android:layout_marginTop="@dimen/notification_image_margin_top" />
        <TextView android:textSize="@dimen/notification_text_size" android:textColor="@color/notification_panel_text_color" android:gravity="center" android:layout_gravity="top|center" android:id="@id/panel_text" android:background="@drawable/zzz_null" android:layout_width="fill_parent" android:layout_height="@dimen/notification_text_height" android:layout_marginTop="@dimen/notification_text_margin_top" android:lineSpacingExtra="@dimen/notification_text_line_spacing" />
    </LinearLayout>
    <LinearLayout android:id="@id/panel_border" android:background="@drawable/setting_panel_bg_line" android:layout_width="@dimen/notification_panel_width" android:layout_height="@dimen/notification_panel_height" android:alpha="0.0" />
</FrameLayout>